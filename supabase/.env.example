# Supabase Edge Functions Environment Variables
# Copy this file to .env.local and fill in your actual values

# Apple App Store Configuration
APPLE_SHARED_SECRET=your_app_store_connect_shared_secret_here
APPLE_ENV=sandbox  # Use 'sandbox' for testing, 'production' for live app

# Stripe Configuration (for web purchases)
STRIPE_SECRET_KEY=sk_test_xxxxx  # Use sk_live_xxxxx for production
STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx  # Use pk_live_xxxxx for production

# Supabase (auto-injected by Supabase CLI, but useful for local testing)
SUPABASE_URL=http://localhost:54321
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
